// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Patient {
    id              String   @id
    cardNumber      Int      @default(autoincrement())
    name            String
    age             Int
    phoneNumber     String
    cnic            String
    dateLastVisited DateTime
    comments        String
}
